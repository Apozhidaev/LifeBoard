<Page xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      x:Class="LifeBoard.Views.Issues.IssuesView"
      mc:Ignorable="d" d:DesignHeight="600" d:DesignWidth="800"
      Title="IssuesView">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Button Content="Create" Grid.Column="1" HorizontalAlignment="Right" Margin="0,10,10,0" VerticalAlignment="Top"
                Command="{Binding Parent.CreateIssue.NavigateCommand}" Style="{DynamicResource MainButtonStyle}" />
        <ScrollViewer Margin="0,60,0,0" VerticalScrollBarVisibility="Auto">
            <Grid Margin="20,0,10,10">
                <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="Types:" VerticalAlignment="Top" Style="{DynamicResource GroupTextStyle}"/>
                <TextBlock HorizontalAlignment="Left" Margin="0,105,0,0" TextWrapping="Wrap" Text="Statuses:" VerticalAlignment="Top" Style="{DynamicResource GroupTextStyle}"/>
                <TextBlock HorizontalAlignment="Left" Margin="0,225,0,0" TextWrapping="Wrap" Text="Priorities:" VerticalAlignment="Top" Style="{DynamicResource GroupTextStyle}"/>
                <Rectangle Fill="#FF1E395B" HorizontalAlignment="Stretch" Height="1" Margin="0,32,0,0" VerticalAlignment="Top"/>
                <Rectangle Fill="#FF1E395B" HorizontalAlignment="Stretch" Height="1" Margin="0,137,0,0" VerticalAlignment="Top"/>
                <Rectangle Fill="#FF1E395B" HorizontalAlignment="Stretch" Height="1" Margin="0,257,0,0" VerticalAlignment="Top"/>
                <ListBox ScrollViewer.HorizontalScrollBarVisibility="Disabled" Height="60" HorizontalAlignment="Stretch" Margin="5,35,5,0" VerticalAlignment="Top" ItemsSource="{Binding Filter.Types}" ItemTemplate="{DynamicResource FilterItemDataTemplate}" BorderThickness="0" />
                <ListBox ScrollViewer.HorizontalScrollBarVisibility="Disabled" Height="80" HorizontalAlignment="Stretch" Margin="5,140,5,0" VerticalAlignment="Top" ItemsSource="{Binding Filter.Statuses}" ItemTemplate="{DynamicResource FilterItemDataTemplate}" BorderThickness="0" />
                <ListBox ScrollViewer.HorizontalScrollBarVisibility="Disabled" Height="100" HorizontalAlignment="Stretch" Margin="5,260,5,0" VerticalAlignment="Top" ItemsSource="{Binding Filter.Priorities}" ItemTemplate="{DynamicResource FilterItemDataTemplate}" BorderThickness="0" />
            </Grid>
        </ScrollViewer>
        <DataGrid x:Name="_dataGrid" Grid.Column="1" 
    		IsReadOnly="True"
    		HorizontalAlignment="Stretch"
    		Margin="0,60,0,0"
    		VerticalAlignment="Stretch"
    		ItemsSource="{Binding Issues}"
    		RowStyle="{DynamicResource IssueDataGridRowStyle}"
    		AlternatingRowBackground="WhiteSmoke" 
    		AlternationCount="2" CellStyle="{DynamicResource IssueDataGridCellStyle}"
    		GridLinesVisibility="None" AutoGenerateColumns="False" SelectionMode="Single">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Type" Binding="{Binding IssueType}" ElementStyle="{DynamicResource GridGroupTextStyle}"/>
                <DataGridTextColumn Header="Summary" Binding="{Binding Summary}" ElementStyle="{DynamicResource GridGroupTextStyle}"/>
                <DataGridTextColumn Header="Priority" Binding="{Binding Priority}" ElementStyle="{DynamicResource GridGroupTextStyle}"/>
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" ElementStyle="{DynamicResource GridGroupTextStyle}"/>
            </DataGrid.Columns>
            <DataGrid.RowDetailsTemplate>
                <DataTemplate>
                    <Grid Height="150" Background="White">
                        <TextBlock Margin="15,2,0,0" Text="Description:" Style="{DynamicResource BodyGroupTextStyle}" HorizontalAlignment="Left" Width="122" Height="27" VerticalAlignment="Top"/>
                        <TextBlock Margin="40,30,10,10" Text="{Binding Description}" Height="100" MaxWidth="800" TextWrapping="Wrap" HorizontalAlignment="Left" Style="{DynamicResource BodyTextStyle}"/>
                    </Grid>
                </DataTemplate>
            </DataGrid.RowDetailsTemplate>
        </DataGrid>
        <TextBlock Text="Issues" HorizontalAlignment="Left" Margin="10,20,0,0" VerticalAlignment="Top" Style="{DynamicResource GroupHeaderTextStyle}"/>
    </Grid>
</Page>